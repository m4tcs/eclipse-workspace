# Displays the string at customServerName in the player list, when set to true.
displayServerName: true

# Displays a player's total deaths before their username in the player list.
# NOTE:: This value is capped at 9999.
displayServerDeaths: true

# Kills all players if one player dies, when set to true. (DEFAULT = "false")
lifeLinked: false

# Displays the desired string as a value in the player list header. (DEFAULT = "Whomst'd've Minecraft Server").
# NOTE:: This value is only fetched if "displayServerName" is set to "true".
customServerName: Whomst'd've Minecraft Server