package com.servebeer.quake;

import org.bukkit.Bukkit;
import org.bukkit.ChatColor;
import org.bukkit.Statistic;
import org.bukkit.entity.Player;
import org.bukkit.event.EventHandler;
import org.bukkit.event.Listener;
import org.bukkit.event.player.PlayerRespawnEvent;
import org.bukkit.plugin.Plugin;
import org.bukkit.scheduler.BukkitRunnable;

public class DeathStatisticUpdate implements Listener {
	
	private Plugin plugin = Main.getPlugin(Main.class);
	@EventHandler
	public void onPlayerJoin(PlayerRespawnEvent event)
	{
		new BukkitRunnable()
		{

			@Override
			public void run() {
				Player player = event.getPlayer();
				int deaths;
				deaths = player.getStatistic(Statistic.DEATHS);
				String space = "   ";
				if (deaths > 9999)
					deaths = 9999;
				
				
				
				if (deaths < 10)
				{
					player.setPlayerListName(ChatColor.GOLD + " " + deaths + "   " + ChatColor.WHITE + player.getName());
				}
				else
				{
					space = " ";
					for (int x = 10000; deaths >= x; x = x * 10)
					{
						space = space + space;
					}
				}
			}
			
		}.runTaskLater(plugin, 2);
	}
}
